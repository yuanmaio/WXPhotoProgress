<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000"
    tools:context="photo.wx.com.wxphotoprogress.MainActivity">

    <photo.wx.com.wxphotoprogress.view.LineView
        android:id="@+id/lineView"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_gravity="center"
        android:background="@color/jacinth"></photo.wx.com.wxphotoprogress.view.LineView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:orientation="vertical" >
        <photo.wx.com.wxphotoprogress.view.CircleBackgroundTextView
            android:id="@+id/button_start"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:onClick="onClick"
            android:text="按住"
            android:textColor="#ffffff" />
    </LinearLayout>
</LinearLayout>
